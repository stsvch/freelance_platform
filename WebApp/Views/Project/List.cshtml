@model IEnumerable<ProjectModel>
@using Microsoft.AspNetCore.Http;
@{
    var userId = Context.Session.GetString("UserId");
    var role = ViewData["Role"] as string;
}

<div class="container mt-4">
    <h2 class="mb-4">Доступные проекты</h2>

    @if (Model != null && Model.Any())
    {
        <div class="list-group">
            @foreach (var project in Model)
            {
                <div class="list-group-item mb-4">
                    <div class="d-flex justify-content-between">
                        <h5 class="mb-1">@project.Title</h5>
                        <button class="btn btn-link" type="button" onclick="toggleProjectDetails(@project.Id)">
                            Подробнее
                        </button>
                    </div>

                    <div id="projectDetails-@project.Id" style="display:none;" class="project-details mt-3">
                        <p><strong>Описание:</strong> @project.Description</p>
                        <p><strong>Бюджет:</strong> @project.Budget руб.</p>
                        <p><strong>Создано:</strong> @project.CreatedAt?.ToString("dd.MM.yyyy")</p>
                        <p><strong>Обновлено:</strong> @project.UpdatedAt?.ToString("dd.MM.yyyy")</p>
                        <form asp-action="Create" asp-controller="Response" method="get">
                            <input type="hidden" name="projectId" value="@project.Id" />
                            <button type="submit" class="btn btn-primary">Откликнуться</button>
                        </form>

                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-warning">
            Нет проектов.
        </div>
    }
</div>

<script>
    function toggleProjectDetails(projectId) {
        var details = document.getElementById('projectDetails-' + projectId);
        if (details.style.display === 'none') {
            details.style.display = 'block';
        } else {
            details.style.display = 'none';
        }
    }
</script>
