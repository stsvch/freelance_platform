@model IEnumerable<ProjectModel>
@using Microsoft.AspNetCore.Http; <!-- Убедитесь, что пространство имен подключено -->
@{
    var userId = Context.Session.GetString("UserId");
    var role = ViewData["Role"] as string;
}

<div class="container mt-4">
    <h2 class="mb-4">Мои проекты</h2>

    @if (Model != null && Model.Any())
    {
        <div class="list-group">
            @foreach (var project in Model)
            {
                <div class="list-group-item">
                    <div class="d-flex justify-content-between">
                        <h5 class="mb-1">@project.Title</h5>
                        <!-- Кнопка для раскрытия информации -->
                        <button class="btn btn-link" type="button" onclick="toggleProjectDetails(@project.Id)">
                            Подробнее
                        </button>
                    </div>

                    <!-- Скрытая информация о проекте -->
                    <div id="projectDetails-@project.Id" style="display:none;" class="project-details mt-3">
                        <p><strong>Описание:</strong> @project.Description</p>
                        <p><strong>Бюджет:</strong> @project.Budget руб.</p>
                        <p><strong>Создано:</strong> @project.CreatedAt?.ToString("dd.MM.yyyy")</p>
                        <p><strong>Обновлено:</strong> @project.UpdatedAt?.ToString("dd.MM.yyyy")</p>
                        @if (role == "Client")
                        {
                            <a href="@Url.Action("EditProjects", "Project", new { id = project.Id })" class="btn btn-secondary">Редактировать</a>
                            <a href="@Url.Action("DeleteProjects", "Project", new { id = project.Id })" class="btn btn-danger">Удалить</a>
                        }
                        else if (role == "Freelancer")
                        {
                            <!-- Дополнительные действия для фрилансера -->
                            <a href="@Url.Action("SubmitWork", "Projects", new { id = project.Id })" class="btn btn-success">Отправить работу</a>
                        }
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-warning">
            Нет доступных проектов.
        </div>
    }
</div>

<!-- Скрипт для раскрытия и скрытия деталей проекта -->
<script>
    function toggleProjectDetails(projectId) {
        var details = document.getElementById('projectDetails-' + projectId);
        if (details.style.display === 'none') {
            details.style.display = 'block';
        } else {
            details.style.display = 'none';
        }
    }
</script>
